<h1>search room</h1>
<form action="/search" method="get">
<div class="container-fluid">

            <div class="row ">

              <div class="col-md-10 mx-auto text-center">

                <div class="form">

               <button class="fa fa-search"></button>

                  <input type="text" name="name" class="form-control form-input {{#if errors}}is-invalid{{/if}}" placeholder="Search anything..." value="{{query.title}}">
                  
                  <span class="left-pan d-md-none"><i class="fa fa-microphone"></i></span>
                </div>
                
              </div>
              
            </div>
            
          </div>
</form>
</div>
<div class="row">
{{#each skills as |skill|}}
<div class="card text-white bg-primary m-2 col-4" style="max-width: 18rem;">
    
 <div class="card-header d-flex">
   <a style=" color:white ; text-decoration: none" href="/skill-owner/{{owner.id}}">
    <img id="img-card" src="https://i.pravatar.cc/150?u=iron-fake@pravatar.com" alt="Icono" class="rounded-circle d-inline">
  <p>{{skill.owner.username}}</p>
   </a>
  </div>
 
  <div class="card-body">
    <p> {{skill.name}}</p>
    <p class="card-text">{{skill.description}}</p>
    
