<h1>search room</h1>
<form action="/search" method="get">
  <div class="container-fluid">

    <div class=" d-flex">

      <div class="col-md-4 mx-auto text-center">

        <div class="form">
          <select class="form-select" name="category">
            <option value="all">Categories</option>
            <option value="Crafts" {{#ifEq query.category 'Crafts' }}selected{{/ifEq}}>Crafts</option>
            <option value="Cooking" {{#ifEq query.category 'Cooking' }}selected{{/ifEq}}>Cooking</option>
            <option value="Gardening and Horticulture" {{#ifEq query.category 'Gardening and Horticulture'
              }}selected{{/ifEq}}>Gardening and Horticulture</option>
            <option value="Everyday Life skills" {{#ifEq query.category 'Everyday Life skills' }}selected{{/ifEq}}>
              Everyday Life skills </option>
            <option value="Music" {{#ifEq query.category 'Music' }}selected{{/ifEq}}>Music</option>
            <option value="Sports" {{#ifEq query.category 'Sports' }}selected{{/ifEq}}>Sports</option>
            <option value="Technology" {{#ifEq query.category 'Technology' }}selected{{/ifEq}}>Technology</option>
            <option value="Languages and Culture" {{#ifEq query.category 'Languages and Culture' }}selected{{/ifEq}}>
              Languages and Culture</option>
            <option value="Others" {{#ifEq query.category 'Others' }}selected{{/ifEq}}>Others</option>
          </select>



          <input type="text" name="name" class="form-control form-input {{#if errors}}is-invalid{{/if}}"
            placeholder="Search anything..." value="{{query.title}}">
          <button class="fa fa-search"></button>
          <span class="left-pan d-md-none"><i class="fa fa-microphone"></i></span>
        </div>

      </div>

    </div>

  </div>
</form>
</div>
<div class="forYou container d-flex justify-content-center mt-5">

{{#each skillsByInterests as |skill|}}

<div class="container d-flex justify-content-center mt-5">
  <div class="card">

    <div  class="top-container">
      <a class="img-card" href="/profile/{{skill.owner.id}}"><img src="https://i.pravatar.cc/150?u={{skill.owner.email}}" class="img-fluid profile-image" width="70"></a>
      
      <div class="rate" style=" max-width: 15rem;" data-rate="{{skill.averageRate}}">
        <span class="star">&#9733;</span>
        <span class="star">&#9733;</span>
        <span class="star">&#9733;</span>
        <span class="star">&#9733;</span>
        <span class="star">&#9733;</span>
        <p class="name">{{skill.owner.username}}</p>
      </div>
      

    </div>
<a class="text-decoration-none" style="color: black;" href="/detail/{{skill.id}}">
    <div class="middle-container d-flex row justify-content-between                 align-items-center mt-3 p-2 ">
      

      <div class="d-flex flex-row  col-md-12 mr-1">
        <img src="{{categoryImage skill.category}}" alt="Img {{skill.category}}" style="width: 20px;" class="mx-1">
        <span class="current-balance">{{skill.category}}</span>
      </div>
      <div class="description">
        <p>{{skill.description}}</p>
      </div>
    </div>
    
</a>
  </div> 
</div>


{{/each}}

