<div class="form-page">
  <div class="container">
    <div class="form-container">
      <div class="form-header">
        <h1>Create New Skill</h1>
        <p>Share your knowledge with the community</p>
      </div>

      <form action="/skills/new" method="post">
        <!-- Category -->
        <div class="form-group">
          <label for="category">
            <i class="bi bi-tag"></i>
            Category
          </label>
          <select
            name="category"
            id="category"
            class="modern-select {{#if errors.category}}is-invalid{{/if}}"
            required
          >
            <option value="">Select a category</option>
            <option value="crafts">Crafts</option>
            <option value="cooking">Cooking</option>
            <option value="gardening and horticulture">Gardening and Horticulture</option>
            <option value="everyday life skills">Everyday Life Skills</option>
            <option value="music">Music</option>
            <option value="sports">Sports</option>
            <option value="technology">Technology</option>
            <option value="languages and culture">Languages and Culture</option>
            <option value="others">Others</option>
          </select>
          {{#if errors.category}}
            <div class="invalid-feedback">{{errors.category}}</div>
          {{/if}}
        </div>

        <!-- Name -->
        <div class="form-group">
          <label for="name">
            <i class="bi bi-pencil"></i>
            Skill Name
          </label>
          <input
            type="text"
            name="name"
            id="name"
            class="modern-input {{#if errors.name}}is-invalid{{/if}}"
            placeholder="e.g., Advanced JavaScript, Guitar Lessons, Italian Cooking..."
            required
          >
          {{#if errors.name}}
            <div class="invalid-feedback">{{errors.name}}</div>
          {{/if}}
        </div>

        <!-- Description -->
        <div class="form-group">
          <label for="description">
            <i class="bi bi-file-text"></i>
            Description
          </label>
          <textarea
            name="description"
            id="description"
            class="modern-textarea {{#if errors.description}}is-invalid{{/if}}"
            placeholder="Describe your skill, what you'll teach, and what others can learn from you..."
            required
          ></textarea>
          {{#if errors.description}}
            <div class="invalid-feedback">{{errors.description}}</div>
          {{/if}}
          <div class="form-help">
            <i class="bi bi-info-circle"></i>
            <span>Write a detailed description to help others understand your skill</span>
          </div>
        </div>

        <!-- Actions -->
        <div class="form-actions">
          <a href="/search" class="btn-cancel">
            <i class="bi bi-x-circle"></i>
            Cancel
          </a>
          <button type="submit" class="btn-submit">
            <i class="bi bi-check-circle"></i>
            Create Skill
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
