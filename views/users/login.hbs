<h1>login</h1>
<form method="post" action="/login">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input value="{{user.email}}" type="email" name="email" class="form-control" placeholder="Enter email">
   
  </div>
 
  <div class="form-group">
    <label>Password</label>
    <input  type="password" name="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" placeholder="Password">
  {{#if errors.password}}<small class="invalid-feedback">{{errors.password}}</small>{{/if}}

  </div>

  <button type="submit" class="btn btn-primary mt-2">Login</button>
</form>