<section class="vh-100" >

  <div class="container ">
    <div class="row justify-content-center" >
      <div class="col-lg-6 p-2"  >
        <div class="card col-md-12 mt-1" >
          <div class=" card-body">
            <h2 class="card-title text-center mb-0">Edit Profile</h2>

            <form action="/edit" method="post" class="profile-form">

              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" class="form-control {{#if errors.username}}is-invalid{{/if}} text-muted " value="{{currentUser.username}}" readonly/>
                {{#if errors.username}} <small class="invalid-feedback">{{errors.username}}</small>{{/if}}
              </div>

              <div class="mb-3">
                <label for="email" class="form-label"> <em>Email</em></label>
                <input type="email" name="email" class="form-control text-muted" value="{{currentUser.email}}" readonly/>
              </div>

              <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control {{#if errors.description}}is-invalid{{/if}}" name="description" rows="3" placeholder="write a brief description about yourself">{{currentUser.description}}</textarea>
                {{#if errors.description}} <small class="invalid-feedback"> {{errors.description}}</small>{{/if}}
              </div>

              <div>
                <h3>Interests</h3>
                {{>icons}}
              </div>

              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-warning btn-lg my-3 text-white"><i class="far fa-edit me-1"></i>Edit</button>
              </div>

            </form>

          </div>
        </div>
      </div>
    </div>

  </div>

</section>